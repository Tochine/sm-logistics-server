{
    "env": {
      "es6": true,
      "mocha": true,
      "commonjs": true
    },
    "extends": [
      "airbnb-base",
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 11
    },
    "root": true,
    "rules": {
      "arrow-body-style": "off",
      "allowForLoopAfterthoughts": true,
      "no-underscore-dangle": 0,
      "treatUndefinedAsUnspecified": 0,
      "max-len": [
        "off",
        {
          "code": 120
        }
      ],
      "semi": ["error", "always"],
      "quotes": ["error", "double"],
      "indent": [
        "error",
        2,
        { "SwitchCase": 1 }
      ]
    }
  }
  